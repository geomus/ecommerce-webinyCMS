{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json"
      ],
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): New release :tada: :rocket:"
    },
    "publish": {
      "conventionalCommits": true,
      "contents": "dist"
    }
  }
}
